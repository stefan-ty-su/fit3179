{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/englishOnlySpeakers.csv"
  },
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "width": {"step": 25},
  "encoding": {
    "x": {
      "field": "State",
      "type": "ordinal",
      "title": "State",
      "axis": {
          "labelAngle": -45
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Amount",
      "type": "quantitative",
      "stack": "normalize",
      "title": "Percentage"
    },
    "color": {
      "field": "Language",
      "type": "nominal",
      "title": "Language",
      "scale": {
        "range": ["#347cd9", "#ff6961", "#ababab"]
      }
    }
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 14}
  },
  "title": "% of English-Only Speakers by State"
}
  