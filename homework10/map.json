{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 300,
    "params": [
        {
            "name": "Country_of_Birth_selection",
            "value": "Australia",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Australia",
                    "England",
                    "India",
                    "China",
                    "Vietnam",
                    "Italy",
                    "Philippines",
                    "New Zealand",
                    "South Africa",
                    "Nepal"
                ],
                "labels": [
                    "Australia",
                    "England",
                    "India",
                    "China",
                    "Vietnam",
                    "Italy",
                    "Philippines",
                    "New Zealand",
                    "South Africa",
                    "Nepal"
                ],
                "name": "Country of Birth Selection: "
            }
        }
    ],
    "data": {
      "url": "data/STE_2021_AUST_GDA2020.json",
      "format": {
        "type": "topojson",
        "feature": "STE_2021_AUST_GDA2020"
      }
    },
    "transform": [{
      "lookup": "properties.STE_NAME21",
      "from": {
        "data": {
          "url": "data/hw10.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "State",
        "fields": ["Persons", "Total", "Country of Birth"]
      }
    },
    {
        "calculate": "(datum.Persons/datum.Total) * 100",
        "as": "% Born"
    },
    {
        "filter": "datum['Country of Birth'] == Country_of_Birth_selection"
    }],
    "projection": {
      "type": "mercator"
    },
    "mark": {
        "type": "geoshape",
        "stroke": "white"
    },
    "encoding": {
      "color": {
        "field": "% Born",
        "type": "quantitative",
        "scale": {
            "scheme": "reds"
        }
      },
      "tooltip": [
        {"field": "properties.STE_NAME21", "title": "State"},
        {"field": "% Born", "title": "% Born", "format": ".2f"}
      ]
    }
}